<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Repeat num_cycles="3">
            <Sequence>
                <Sequence>
                    <Action ID="localization" goal_nav="{goal_nav}"/>
                    <Action ID="go_point" goal_nav="{goal_nav}"/>
                    <Action ID="check_person"/>
                </Sequence>
                <Action ID="ask_info" info="{info}"/>
                <Action ID="referee" goal_nav="{goal_nav}"/>
                <Action ID="go_point" goal_nav="{goal_nav}"/>
                <Action ID="tell_info" info="{info}"/>
            </Sequence>
        </Repeat>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="ask_info">
            <output_port name="info"/>
        </Action>
        <Action ID="check_person"/>
        <Action ID="go_point">
            <input_port name="goal_nav"/>
        </Action>
        <Action ID="localization">
            <output_port name="goal_nav"/>
        </Action>
        <Action ID="referee">
            <output_port name="goal_nav"/>
        </Action>
        <Action ID="tell_info">
            <input_port name="info"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

